<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShareActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/qrCode"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="loadQR"
        android:background="@color/buttonBackground"
        app:layout_constraintHeight_percent="0.4">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toTopOf="@id/qrText"
            android:src="@drawable/ic_qrcode"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/qrText"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/create_qr"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/qrCode"
        android:id="@+id/linkCode"
        android:clickable="true"
        android:focusable="true"
        android:onClick="loadLink"
        android:layout_margin="5dp"
        android:background="@color/buttonBackground"
        app:layout_constraintHeight_percent="0.4">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/linkText"
            android:src="@drawable/ic_link"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/linkText"
            android:clickable="false"
            android:focusable="false"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/create_link"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>